{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deployment-prefix": {
            "type": "string",
            "metadata": {
                "description": "Deployment prefix. E.g. Organization-DeploymentType"
            }
        },
        "file-shares": {
            "type": "array",
            "metadata": {
                "description": "List of all file shares to create"
            }
        },
        "sas-key":{  
            "type":"string",
            "metadata":{  
                "description":"Shared Access Signature Key used to download custom scripts"
            }
        },
        "output-params-storage-account-name":{  
            "type":"string",
            "metadata":{  
                "description":"Default storage account name. Storage account that contains output parameters and common scripts"
            }
        }
    },
    "variables": {
        "uniqueString": "[uniqueString(subscription().id, resourceGroup().id, parameters('deployment-prefix'))]",
        "api-version": "2018-02-01",
        "palo-alto-storage-name": "[toLower(substring(replace(concat('pastorage', variables('uniqueString'), variables('uniqueString')), '-', ''), 0, 23))]",
        "image": "microsoft/azure-cli",
        "cpuCores": "1.0",
        "memoryInGb": "1.5",
        "FScontainerGroupName": "createfs-aci",
        "DircontainerIngressGroupName": "dirIngress-aci",
        "DircontainerEgressGroupName": "dirEgress-aci",
        "UploadcontainerGroupName": "createupl-containerinstance",
        "containerName": "createfileshare",
        "share-name": "fwpaloalto",
        "egress-blob-uri": "[concat('https://', parameters('output-params-storage-account-name'), '.blob.core.windows.net/scripts/palo-alto/egress/bootstrap.xml?', parameters('sas-key'))]",
        "ingress-blob-uri": "[concat('https://', parameters('output-params-storage-account-name'), '.blob.core.windows.net/scripts/palo-alto/ingress/bootstrap.xml?', parameters('sas-key'))]",
        "create-bootstrap-uri": "[concat('https://', parameters('output-params-storage-account-name'), '.blob.core.windows.net/scripts/palo-alto/create-bootstrap.sh?', parameters('sas-key'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('palo-alto-storage-name')]",
            "apiVersion": "[variables('api-version')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "tags": {
                "displayName": "Palo Alto Storage Account"
            },
            "properties": {
                "encryption": {
                    "keySource": "Microsoft.Storage",
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file":{
                            "enabled": true
                        }
                    }
                }
            },
            "resources": []
        },
        {
            "name": "[variables('FScontainerGroupName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-02-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('palo-alto-storage-name')]"
            ],
            "properties": {
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "create",
                                "--name",
                                "[variables('share-name')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('palo-alto-storage-name')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    },
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "directory",
                                "--name",
                                "ingress",
                                "--share-name",
                                "[variables('share-name')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('palo-alto-storage-name')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    },
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "directory",
                                "--name",
                                "egress",
                                "--share-name",
                                "[variables('share-name')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('palo-alto-storage-name')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        },
        {
            "name": "[concat(variables('DircontainerIngressGroupName'), copyIndex())]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-02-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('FScontainerGroupName')]"
            ],
            "properties": {

                "copy": {
                    "count": "[length(parameters('file-shares'))]",
                    "name": "containers",
                    "input": {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "directory",
                                "--name",
                                "[parameters('file-shares')[copyIndex()]]",
                                "--share-name",
                                "[concat(variables('share-name'), '/ingress')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('palo-alto-storage-name')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                },
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        },
        {
            "name": "[concat(variables('DircontainerEgressGroupName'), copyIndex())]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-02-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('FScontainerGroupName')]"
            ],            
            "properties": {
                "copy": {
                    "count": "[length(parameters('file-shares'))]",
                    "name": "containers",
                    "input": {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[variables('image')]",
                            "command": [
                                "az",
                                "storage",
                                "share",
                                "directory",
                                "--name",
                                "[parameters('file-shares')[copyIndex('containers')]]",
                                "--share-name",
                                "[concat(variables('share-name'), '/egress')]"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "AZURE_STORAGE_KEY",
                                    "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
                                },
                                {
                                    "name": "AZURE_STORAGE_ACCOUNT",
                                    "value": "[variables('palo-alto-storage-name')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "[variables('cpuCores')]",
                                    "memoryInGb": "[variables('memoryInGb')]"
                                }
                            }
                        }
                    }
                },
                "restartPolicy": "OnFailure",
                "osType": "Linux"
            }
        }
    ],
    "outputs": {
        "bootstrap-storage-account": {
            "type": "string",
            "value": "[variables('palo-alto-storage-name')]"
        },
        "bootstrap-storage-account-access-key": {
            "type": "string",
            "value": "[listKeys(variables('palo-alto-storage-name'),'2017-10-01').keys[0].value]"
        },
        "palo-alto-storage-id": {
            "type": "string",
            "value": "[resourceId('Microsoft.Storage/storageAccounts', variables('palo-alto-storage-name'))]"
        },
        "bootstrap-storage-share-name": {
            "type": "string",
            "value": "[variables('share-name')]"
        }
    }
}